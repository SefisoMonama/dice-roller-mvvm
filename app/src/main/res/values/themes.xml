<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiceRoller2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
         <item name="colorSecondaryVariant">@color/teal_700</item>
         <item name="colorOnSecondary">@color/black</item>
         <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Light theme -->

    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chipbackgroundcolor</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>
    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="checkedIconTint">@color/primary</item>
        <item name="checkedChip">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="SaveButtonCustomStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/saveButton</item>
    </style>

    <style name="AppBackgroundColor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/white</item>
    </style>


    <style name="CustomCardStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cardCornerRadius">10dp</item>
    </style>


    <style name="titleStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/baloo_thambi</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="subTitleStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="titleDiceFrag" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/baloo_thambi</item>
        <item name="android:textColor">@color/diceTitle</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>